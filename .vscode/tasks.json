{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build OpenGL",
      "command": "dotnet",
      "type": "process",
      "args": [
        "build",
        "${workspaceFolder}/src/Mania.OpenGL",
        "-p:DefineConstants=OPENGL"
      ],
      "problemMatcher": "$msCompile",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Build Android",
      "command": "dotnet",
      "type": "process",
      "args": [
        "build",
        "${workspaceFolder}/src/Mania.Android",
        "-p:DefineConstants=ANDROID"
      ],
      "problemMatcher": "$msCompile",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Build DirectX",
      "command": "dotnet",
      "type": "process",
      "args": [
        "build",
        "${workspaceFolder}/src/Mania.DirectX",
        "-p:DefineConstants=DIRECTX"
      ],
      "problemMatcher": "$msCompile",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Build Util",
      "command": "dotnet",
      "type": "process",
      "args": ["build", "${workspaceFolder}/src/Mania.Util"],
      "problemMatcher": "$msCompile",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Update content",
      "command": "dotnet",
      "type": "process",
      "args": ["mgcp"],
      "problemMatcher": "$msCompile",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
